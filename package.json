{
  "name": "builder-tool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "clean:compiled-js": "rm -f public/serviceWorker.js public/nativeFunctions.js public/forceLoadWMID.js",
    "sw:build": "esbuild src/scripts/serviceWorker.ts --bundle --platform=browser --format=iife --outfile=public/serviceWorker.js",
    "sw:watch": "esbuild src/scripts/serviceWorker.ts --bundle --platform=browser --format=iife --outfile=public/serviceWorker.js --watch",
    "nf:build": "esbuild src/scripts/nativeFunctions.ts --bundle --platform=browser --format=iife --outfile=public/nativeFunctions.js",
    "nf:watch": "esbuild src/scripts/nativeFunctions.ts --bundle --platform=browser --format=iife --outfile=public/nativeFunctions.js --watch",
    "wm:build": "esbuild src/scripts/forceLoadWMID.ts --bundle --platform=browser --format=iife --outfile=public/forceLoadWMID.js",
    "wm:watch": "esbuild src/scripts/forceLoadWMID.ts --bundle --platform=browser --format=iife --outfile=public/forceLoadWMID.js --watch",
    "dev:3000": "next dev --port 3000 --turbopack",
    "dev:3001": "next dev --port 3001 --turbopack",
    "dev": "concurrently -k \"npm:sw:watch\" \"npm:nf:watch\" \"npm:wm:watch\" \"npm:dev:3000\" \"npm:dev:3001\"",
    "build": "npm run clean:compiled-js && npm run sw:build && npm run nf:build && npm run wm:build && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "node copy-zone.mjs",
    "prebuild": "node copy-zone.mjs",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "src/**/*.{ts,tsx}": "eslint --fix"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/roboto": "^5.2.6",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@mui/x-tree-view": "^8.9.2",
    "@react-three/drei": "^10.0.4",
    "@react-three/fiber": "^9.1.0",
    "@tylertech/forge": "^3.10.4",
    "@tylertech/forge-react": "^3.1.0",
    "@ui5/webcomponents": "2.15.0",
    "@ui5/webcomponents-fiori": "2.15.0",
    "@ui5/webcomponents-icons": "2.15.0",
    "@ui5/webcomponents-react": "^2.12.0",
    "firebase": "^12.1.0",
    "firebase-admin": "^13.5.0",
    "lz-string": "^1.5.0",
    "mui-color-input": "^7.0.0",
    "next": "^15.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "three": "^0.174.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.174.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "eslint-config-next": "15.2.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
